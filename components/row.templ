package components

templ Rows(anchor string, title string, p string) {
	<section id={ anchor } class="p-8 py-20 bg-base-300">
		<div class="flex flex-col items-center max-w-6xl gap-6 mx-auto">
			<h2 class="text-4xl font-bold">{ title }</h2>
			<p class="max-w-3xl text-xl text-center">{ p }</p>
			<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-15 mt-5">
				{ children... }
			</div>
		</div>
	</section>
}
